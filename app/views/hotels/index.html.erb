<p id="notice"><%= notice %></p>

<h1>Hotels</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Fotos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.nombre %></td>
        <td><%= hotel.descripcion %></td>
        <td><%= hotel.direccion %></td>
        <td><%= hotel.telefono %></td>
        <td><%= hotel.email %></td>
        <td><%= image_tag(hotel.fotos.first.thumb.url, alt: 'Imagen') %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

